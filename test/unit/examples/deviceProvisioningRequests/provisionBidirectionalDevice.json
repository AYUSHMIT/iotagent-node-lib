{
  "devices": [
    {
      "device_id": "Light1",
      "protocol": "GENERIC_PROTO",
      "entity_name": "TheFirstLight",
      "entity_type": "TheLightType",
      "timezone": "America/Santiago",
      "endpoint": "http://fakedEndpoint:1234",
      "transport": "MQTT",
      "attributes": [
        {
          "name":"location",
          "type":"geo:point",
          "expression": "${latitude}, ${longitude}",
          "reverse": [
            {
              "object_id":"latitude",
              "type": "string",
              "expression": "${@location.substr(@location.indexOf(',') + 1)}"
            },
            {
              "object_id":"longitude",
              "type": "string",
              "expression": "${@location.substr(0, @location.indexOf(','))}"
            }
          ]
        }
      ],
      "lazy": [],
      "static_attributes": [],
      "commands": []
    }
  ]
}